{
    "compilerOptions": {
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowUnreachableCode": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "declaration": true,
        "declarationDir": "./dist",
        "noUnusedLocals": true,
        "module": "esnext",
        "target": "esnext",
        "jsx": "preserve",
        "removeComments": true,
        "pretty": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true
    },
    "include": ["src/"],
    "exclude": []
}
